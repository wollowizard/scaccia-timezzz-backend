{
  "name": "node-js-starter",
  "version": "1.0.0",
  "description": "Node JS starter",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run serve",
    "build:prod": "npm run build",
    "build": "npm run build-ts && npm run lint && npm run copy-assets",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "cross-env ACTIVE_PROFILE=test jest --forceExit --coverage --verbose ./src/test",
    "smoke-test": "wait-on -t 10000 tcp:8080 && jest --forceExit src/integration-test",
    "start-smoke-test": "concurrently -s \"first\" -k -p \"[{name}]\" -n \"Service,Test\" -c \"yellow.bold,cyan.bold,green.bold\" \"cross-env ACTIVE_PROFILE=test npm run serve\" \"cross-env ACTIVE_PROFILE=test npm run smoke-test\"",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "copy-assets": "ts-node copy-assets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect=5858 dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run serve-debug\"",
    "version": "echo $npm_package_version"
  },
  "engines": {
    "node": "15"
  },
  "dependencies": {
    "async": "^3.2.0",
    "auth0": "^2.35.1",
    "axios": "^0.21.1",
    "cache-flow": "^1.7.4",
    "cross-env": "^7.0.3",
    "deepdash": "^5.3.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-jwt-authz": "^2.4.1",
    "jwks-rsa": "^2.0.3",
    "lodash": "^4.17.20",
    "mongodb": "^4.0.0",
    "node-schedule": "^1.3.2",
    "nodemon": "^2.0.7",
    "nps": "^5.10.0",
    "nps-utils": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.167",
    "@types/mocha": "^8.2.0",
    "@types/node-schedule": "^1.3.1",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.17.0",
    "jest": "^26.6.3",
    "mocha": "^8.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.1"
  }
}
